<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="defaultText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="myRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_drawable</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="myRatingBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_big_drawable</item>
        <item name="android:minHeight">62dp</item>
        <item name="android:maxHeight">62dp</item>
    </style>

</resources>
