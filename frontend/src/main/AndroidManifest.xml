<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sf.openmm.frontend2"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.sf.openmm.frontend2.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.ConfigActivity"
            android:label="@string/title_activity_config">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.sf.openmm.frontend2.MainActivity" />

        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.BrowseActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.SearchActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.ShowListActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.ShowSeasonListActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.ShowEpisodesListActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.ShowEpisodeDetailsActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.MoviePrefixListActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.MovieListActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity
            android:name="net.sf.openmm.frontend2.MovieDetailsActivity"
            android:label="@string/title_activity_main">
        </activity>
    </application>

</manifest>
